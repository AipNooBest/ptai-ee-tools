    <artifactId>ptai-rest-api</artifactId>
    <version>0.1</version>

    <name>ptai-rest-api</name>
    <packaging>jar</packaging>
    <url>http://www.ptsecurity.com</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <!-- <version>3.2.0</version> -->
                <version>4.2.2</version>
                <executions>
                    <execution>
                        <id>PTAI EE server authentication API</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/api/auth.yml</inputSpec>
                            <generatorName>java</generatorName>
                            <library>okhttp-gson</library>
                            <configOptions>
                                <dateLibrary>java8</dateLibrary>
                            </configOptions>
                            <apiPackage>com.ptsecurity.appsec.ai.ee.ptai.server.auth.rest</apiPackage>
                            <modelPackage>com.ptsecurity.appsec.ai.ee.ptai.server.auth.rest</modelPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                        </configuration>
                    </execution>
                    <execution>
                        <id>PTAI EE server files store API</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/api/filesstore.yml</inputSpec>
                            <generatorName>java</generatorName>
                            <library>okhttp-gson</library>
                            <configOptions>
                                <dateLibrary>java8</dateLibrary>
                            </configOptions>
                            <apiPackage>com.ptsecurity.appsec.ai.ee.ptai.server.filesstore.rest</apiPackage>
                            <modelPackage>com.ptsecurity.appsec.ai.ee.ptai.server.filesstore.rest</modelPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                        </configuration>
                    </execution>
                    <execution>
                        <id>PTAI EE server gateway API</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/api/gateway.yml</inputSpec>
                            <generatorName>java</generatorName>
                            <library>okhttp-gson</library>
                            <configOptions>
                                <dateLibrary>java8</dateLibrary>
                            </configOptions>
                            <apiPackage>com.ptsecurity.appsec.ai.ee.ptai.server.gateway.rest</apiPackage>
                            <modelPackage>com.ptsecurity.appsec.ai.ee.ptai.server.gateway.rest</modelPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                        </configuration>
                    </execution>
                    <execution>
                        <id>PTAI EE server project management API</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/api/projectmanagement.yml</inputSpec>
                            <generatorName>java</generatorName>
                            <library>okhttp-gson</library>
                            <configOptions>
                                <dateLibrary>java8</dateLibrary>
                            </configOptions>
                            <apiPackage>com.ptsecurity.appsec.ai.ee.ptai.server.projectmanagement.rest</apiPackage>
                            <modelPackage>com.ptsecurity.appsec.ai.ee.ptai.server.projectmanagement.rest</modelPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                        </configuration>
                    </execution>
                </executions>
